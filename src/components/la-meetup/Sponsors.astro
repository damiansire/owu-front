---
import Sponsor from "components/la-meetup/Sponsor.astro";
import sponsors from "content/sponsors.json";
import { shuffleArray } from "libs/shuffle-array";

const sponsorsShuffles = shuffleArray(sponsors);
---

<section
  id="sponsors"
  class="flex flex-col gap-4 items-center justify-center flex-1 relative w-full max-w-[600px] min-h-screen sm:pt-[64px] px-5 sm:px-0"
>
  <span>
    <h2 class="text-5xl font-bold text-yellow-400 text-center">Sponsors</h2>
    <p class="text-lg font-[400] text-white mb-2 mt-2 text-center">
      Nuestros aliados y patrocinadores que hacen este evento posible
    </p>
  </span>
  <a href="https://forms.gle/jtPbZNGQkLCckL5H8" class="mb-4">
    <button
      class="py-2 bg-white rounded-sm w-[240px] font-bold text-lg cursor-pointer transition-[zoom] hover:scale-[1.018]"
    >
      ¡Súmate como Sponsor!
    </button>
  </a>
  <div
    class="grid grid-cols-1 md:grid-cols-3 justify-items-center w-full max-w-[600px] gap-5"
  >
    {
      sponsorsShuffles.map(({ name, image, url }) => {
        return (
          <div class="w-[187px] h-[124px] bg-white hover:scale-105 cursor-pointer">
            <Sponsor name={name} image={image} url={url} />
          </div>
        );
      })
    }
  </div>
</section>
