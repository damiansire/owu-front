        <span class="text-5xl">00</span>
      </div>
      <div class="text-sm text-gray-700">Segundos</div>
    </div>
  </div>
</div>

<script>
  // Fecha y hora de destino (25 de noviembre a las 9:00 AM)
  const targetDate = new Date("2023-11-25T09:00:00");

  function updateCountdown() {
    const currentDate = new Date();
    const timeDifference = targetDate - currentDate;

    const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

    document.getElementById("days").textContent = String(days).padStart(2, "0");
    document.getElementById("hours").textContent = String(hours).padStart(2, "0");
    document.getElementById("minutes").textContent = String(minutes).padStart(2, "0");
    document.getElementById("seconds").textContent = String(seconds).padStart(2, "0");

    if (timeDifference <= 0) {
      if (currentDate.getDate() === targetDate.getDate()) {
        console.log("Es el 25 de noviembre después de las 9:00 AM.");
        //Mostrar que es ahora?
      } else {
        console.log("Es un dia posterior al 25 de noviembre.");
        //Mostras agradecimientos?
      }
    }
  }

  setInterval(updateCountdown, 1000);

  updateCountdown();
</script>
