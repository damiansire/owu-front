---
import Layout from "layouts/Layout.astro";
import Hero from "components/landing/Hero.astro";
import Navbar from "components/landing/Navbar.astro";
import About from "components/landing/About.astro";
import Eventos from "components/landing/Eventos.astro";
import Footer from "components/shared/Footer.astro";
import Stats from "components/landing/Stats.astro";
---

<Layout>
  <main
    class="flex min-h-[100dvh] flex-col items-center justify-center flex-1 gap-12 sm:gap-0"
  >
    <div
      class="px-4 sm:px-6 lg:px-8 max-w-[1200px] w-full self-center flex flex-col items-center"
    >
      <Navbar />
      <Hero />
      <About />
      <Stats />
      <Eventos />
      <Footer />
    </div>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
    background: #000214;
  }
</style>
